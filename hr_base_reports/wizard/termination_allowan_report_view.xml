<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="employees_cost_report_wizard_view" model="ir.ui.view">
            <field name="name">Employees Cost Report</field>
            <field name="model">employees.cost.report</field>
            <field name="arch" type="xml">
                <form string="Employee Cost Report">
                    <sheet>
                        <group>
                            <group>
                                <field name="cause_type"/>
                                <field name="salary_date_from"/>
                                <field name="end_date" required="1"/>
                                 <field name="type" invisible="1"/>
                            </group>
                            <group>
                                <field name="salary_date_to"/>
                                <field name="allowance_ids" widget="many2many_tags"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Employees" >
                                <field name="employee_ids" nolabel="1">
                                    <tree string="Employees" editable="bottom">
                                        <field name="name"/>
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                    <footer>
                        <button string="Print PDF" type="object" name="print_report" class="oe_highlight"/>
                        or
                        <button string="Print Excel" type="object" name="print_excel_report" class="oe_highlight"/>
                        or
                        <button special="cancel" string="Cancel" class="oe_link"/>
                    </footer>
                </form>
            </field>
        </record>
        <record id="employee_cost_report_wizard_action" model="ir.actions.act_window">
            <field name="name">Employee cost Report</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">employees.cost.report</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="employees_cost_report_wizard_view"/>
            <field name="target">new</field>
        </record>
        <menuitem  id="parent_termination_report_employees"
                  parent="exp_payroll_custom.menu_hr_payroll_report"  action="employee_cost_report_wizard_action" sequence="41"/>
<!--        <menuitem name="Employees Cost Reports" id="cost_report_emp_menu"-->
<!--                  parent="hr_base_reports.parent_termination_report_employees" action="employee_cost_report_wizard_action"/>-->
    </data>
</odoo>
