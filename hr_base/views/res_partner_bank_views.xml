<?xml version="1.0" encoding="UTF-8" ?>
<odoo>

    <!-- Inherit Form View to Modify it -->
    <record id="default_number_view_partner_bank_form" model="ir.ui.view">
        <field name="name">default.number.view.partner.bank.form</field>
        <field name="model">res.partner.bank</field>
        <field name="inherit_id" ref="base.view_partner_bank_form"/>
        <field name="arch" type="xml">

            <xpath expr="//group[1]/group[1]" position="inside">
                <field name="default_number"/>
            </xpath>
            <xpath expr="//field[@name='acc_holder_name']" position="after">
                <field name="employee_id"/>
            </xpath>
            <xpath expr="//field[@name='partner_id']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
            <xpath expr="//field[@name='acc_holder_name']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>

        </field>
    </record>

</odoo>