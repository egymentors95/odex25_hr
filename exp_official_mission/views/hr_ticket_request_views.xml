<?xml version="1.0" encoding="UTF-8" ?>
<odoo>

    <!-- Inherit Form View to Modify it -->
    <record id="account_ids_hr_ticket_request_action" model="ir.ui.view">
        <field name="name">account.ids.hr.ticket.request.action</field>
        <field name="model">hr.ticket.request</field>
        <field name="inherit_id" ref="exp_ticket_request.hr_ticket_request_form"/>
        <field name="arch" type="xml">

            <xpath expr="//notebook" position="inside">
                <page string="Accounting Info">
                    <group>
                        <field name="transfer_by_emp_type"/>
                        <field name="account_id" string="Account"
                        />
                        <field name="analytic_account_id" string="Analytic Account"/>

                    </group>
                    <field name="account_ids"
                           attrs="{'invisible' : [('transfer_by_emp_type', '=', False)]}">
                        <tree editable="bottom">
                            <field name="emp_type_id"/>
                            <field name="debit_account_id"/>
                        </tree>
                    </field>
                </page>

            </xpath>

        </field>
    </record>

</odoo>